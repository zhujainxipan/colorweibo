<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        >

<LinearLayout
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:paddingTop="5dp"
              android:paddingRight="10dp"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/item_msgcomment_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ht"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                />

        <TextView
                android:id="@+id/item_msgcomment_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000"
                />

        <TextView
                android:id="@+id/item_msgcomment_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="#000"
                />

    </LinearLayout>

    <TextView
            android:id="@+id/item_msgcomment_commentcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#000"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#eee"/>
    <TextView
            android:id="@+id/item_msgcomment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#000"
            android:background="#fff"
            />
    <ImageView
            android:id="@+id/item_msgcomment_send_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hothuati"
            android:layout_gravity="right"
            android:clickable="true"
            />

</LinearLayout>
    </android.support.v7.widget.CardView>